@model IEnumerable<ReviewSiteLogic.Render.RestaurantDisplay>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-row">
    <div class="h2 p-2">
        Restaurants
    </div>
    <div class="p-2">
        @Html.ActionLink("Create New", "CreateRestaurant", null, new { @class = "btn btn-outline-primary" })
    </div>

    <div class="dropdown p-2">
        <button class="btn btn-outline-secondary dropdown-toggle" id="sortdropdown" type="button" data-toggle="dropdown" aria-haspopup="true">
            Sort
        </button>
        <div class="dropdown-menu" aria-labeledby="sortdropdown">
            <div class="dropdown-item">
                @Html.ActionLink("Rating High - Low", "ListRestaurants", new { q = HttpContext.Current.Request["q"], sort = "rd"})
            </div>
            <div class="dropdown-item">
                @Html.ActionLink("Rating Low - High", "ListRestaurants", new { q = HttpContext.Current.Request["q"], sort = "ra" })
            </div>
            <div class="dropdown-item">
                @Html.ActionLink("Name A - Z", "ListRestaurants", new { q = HttpContext.Current.Request["q"], sort = "na" })
            </div>
            <div class="dropdown-item">
                @Html.ActionLink("Name Z - A", "ListRestaurants", new { q = HttpContext.Current.Request["q"], sort = "nd" })
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">

        @foreach (var restaurant in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 my-2 mx-2 card">
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => restaurant.Name)</h3>
                    <h4 class="card-subtitle">@restaurant.Rating.ToString("N1") / 10</h4>
                    <div class="card-text">
                        @Html.DisplayFor(modelItem => restaurant.Address)<br />
                        @Html.DisplayFor(modelItem => restaurant.Phone)<br />
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Details", "ViewRestaurant", new { id = restaurant.Id }, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
