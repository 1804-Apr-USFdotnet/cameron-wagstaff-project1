@model IEnumerable<ReviewSiteLogic.Render.RestaurantDisplay>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4 card">
            <div class="card-body">
                <h2 class="card-title">Your source for discovering great Restaurants.</h2>
                @Html.ActionLink("Dive in »", "ListRestaurants", null, new {@class = "btn btn-outline-primary btn-lg"})
            </div>
        </div>
    </div>

</div>

<h2>Top 3 Restaurants</h2>
<div class="card-columns">
    @foreach (var restaurant in Model) {
        <div class="card mx-2 my-2">
            <div class="card-body">

                <h3 class="card-title">@Html.DisplayFor(modelItem => restaurant.Name)</h3>
                <h4 class="card-text">@restaurant.Rating.ToString("N1") / 10</h4>
                <div class="card-footer">
                    @Html.ActionLink("Details", "ViewRestaurant", new { id = restaurant.Id }, new { @class = "btn btn-outline-primary" })
                </div>
            </div>
        </div>
    }
</div>